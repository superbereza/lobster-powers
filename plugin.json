{
  "$schema": "https://claude.ai/schemas/plugin.json",
  "name": "openclaw-tools-mcp",
  "version": "0.1.0",
  "description": "OpenClaw tools (cron, memory) as MCP server for Claude Code",
  "author": "superbereza",
  "license": "MIT",
  "repository": "https://github.com/superbereza/openclaw-tools-mcp",
  "keywords": ["openclaw", "mcp", "cron", "memory", "scheduler"],
  "skills": [
    "skills/cron.md",
    "skills/memory.md"
  ],
  "mcp": {
    "command": "python",
    "args": ["-m", "openclaw_tools_mcp"],
    "env": {
      "OPENCLAW_GATEWAY_URL": "http://localhost:18789"
    }
  },
  "requirements": {
    "python": ">=3.11"
  },
  "install": {
    "pip": ["openclaw-tools-mcp"]
  }
}
